generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Auth_provider{
  google
  local
}

model User{
  
  id    Int   @id @default(autoincrement())
  email String @unique
  username    String   
  profile_pic   String 
  createdat   DateTime    @default(now())
  auth_provider Auth_provider
  password String 
  

}

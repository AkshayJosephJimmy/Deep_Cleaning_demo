generator client {
  provider = "prisma-client-js"
  engineType="library"
  
}

datasource db {
  provider = "postgresql"
  
 

}

enum Auth_provider{
  google
  local
}
enum Role{
  admin
  customer
}

model User{
  
  id    String   @id @default(uuid())
  email String @unique
  username    String   
  booking     Booking[]
  profile_pic   String 
  createdat   DateTime    @default(now())
  auth_provider Auth_provider
  role          Role    @default(customer)
  password String 
  

}
model Booking{
id        String    @id @default(uuid()) 
userId    String
user      User        @relation(fields:[userId], references:[id])
serviceType    String
address   String
phoneNum  String
email     String
date      DateTime








}
